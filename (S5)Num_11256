import sys
input = sys.stdin.readline

T = int(input())
for _ in range(T):
    j, N = map(int, input().split())
    a = []
    b = 0
    for i in range(N):
        R, C = map(int, input().split())
        a.append(R*C)
    a.sort(reverse=True)
    for k in a:
        if j - k <= 0:
            b += 1
            print(b)
            break
        else:
            j -= k
            b += 1
            if b == len(a):
                print(b)
