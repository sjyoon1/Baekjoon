import sys
input = sys.stdin.readline

N, K = map(int, input().split())
A = list(map(int, input().split()))
num = N
for i in range(N):
    if A[i] > i*K:
        num1 = 0
        for j in range(N):
            if A[j] != A[i] + ((j-i)*K):
                num1 += 1
        num = min(num, num1)
print(num)
