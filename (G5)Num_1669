import sys
input = sys.stdin.readline

x, y = map(int, input().split())
a = 0
b = 0
if x == y:
    print(0)
else:
    while True:
        if y - x <= b:
            if b - (y-x) >= a//2:
                print(a - 1)
            else:
                print(a)
            break
        else:
            a += 2
            b += a
