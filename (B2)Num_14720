import sys
input = sys.stdin.readline

N = int(input())
a = list(map(int, input().split()))
b = 0
c = 0
for i in a:
    if i == b:
        if b == 0:
            b = 1
            c += 1
        elif b == 1:
            b = 2
            c += 1
        elif b == 2:
            b = 0
            c += 1
print(c)
