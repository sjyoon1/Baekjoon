import sys
input = sys.stdin.readline

T = int(input())
for _ in range(T):
    x, y = map(int, input().split())
    a = 0
    b = 0
    while True:
        if y - x <= b:
            if b - (y-x) >= a//2:
                print(a - 1)
            else:
                print(a)
            break
        else:
            a += 2
            b += a
            
