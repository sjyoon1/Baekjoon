import math
import sys
input = sys.stdin.readline

N = int(input())
A = list(map(float, input().split()))
m = math.ceil(A[0])
if m == 0:
    c = False
else:
    c = True
for i in range(1, N):
    if c == False:
        if A[i] != 0:
            m += math.ceil(A[i])
            c = True
        else:
            pass
    else:
        m += math.floor(A[i])
print(m)
