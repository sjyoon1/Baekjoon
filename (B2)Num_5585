import sys
input = sys.stdin.readline
a = int(input())
c = 1000-a
b = 0
while True:
    if c >= 500:
        b += 1
        c -= 500
    elif c >= 100:
        b += 1
        c -= 100
    elif c >= 50:
        b += 1
        c -= 50
    elif c >= 10:
        b += 1
        c -= 10
    elif c >= 5:
        b += 1
        c -= 5
    elif c >= 1:
        b += 1
        c -= 1
    elif c == 0:
        print(b)
        break
